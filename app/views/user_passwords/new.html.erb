<h2><%= t(:forgot_password) %></h2>

<p><%= t(:instructions_to_reset_password) %></p>

<%= form_for Spree::User.new, :as => :user, :url => user_password_path do |f| %>
  <p>
    <label><%= t(:email) %>:</label>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.submit t("reset_password"), :class => "simpleButton green" %>
  </p>
<% end %>
