<div id="flash_messages">
  <% if flash[:facebook] -%>
    <div class="flash facebook"><%= link_to 'Your Facebook session has ended. Click here to refresh your session and complete this action.', '#', :class => "facebook login_popup"%></div>
  <% end -%>
  <% if flash[:error] -%>
    <div class="flash error"><%= flash[:error] %></div>
  <% end -%>
  <% if flash[:alert] -%>
    <div class="flash error"><%= flash[:alert] %></div>
  <% end -%>
  <% if flash[:notice] %>
    <div class="flash notice"><%= flash[:notice] %></div>
  <% end -%>
  <% if flash[:success] %>
    <div class="flash success"><%= flash[:success] %></div>
  <% end -%>
</div>